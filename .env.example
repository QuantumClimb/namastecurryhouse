# Environment variables for Namaste Curry House
# Copy this file to .env and fill in your actual values

# Database Configuration
# ======================
# Get your connection string from Neon Console
DATABASE_URL="postgresql://username:password@hostname/database?sslmode=require"

# Optional: Unpooled connection for migrations
DATABASE_URL_UNPOOLED="postgresql://username:password@hostname/database?sslmode=require"

# Server Configuration
# ===================
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:8080"

# API URL for frontend
# Local development: http://localhost:3001/api
# Production: https://yourdomain.vercel.app/api
VITE_API_URL=http://localhost:3001/api

# Stripe Configuration
# ====================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_YOUR_SECRET_KEY_HERE"
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY_HERE"
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY_HERE"

# Get webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET_HERE"

# Currency (ISO 4217 code)
STRIPE_CURRENCY="eur"

# Restaurant Contact
# ==================
# WhatsApp number for order notifications (include country code)
RESTAURANT_WHATSAPP="+351920617185"

# Instructions:
# 1. Copy this file to .env
# 2. Replace placeholder values with your actual Neon credentials
# 3. For production, set VITE_API_URL to your deployed domain
# 4. Never commit .env files to git!